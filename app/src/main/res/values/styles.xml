<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ShadowThemeOne" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:elevation">@dimen/layout_margin_mid</item>
        <item name="android:padding">@dimen/layout_margin_mid</item>
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">-3</item>
        <item name="android:shadowDy">-2</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">@color/text_font_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:translationZ">@dimen/layout_margin_smallest</item>
    </style>

    <style name="ShadowThemeTwo" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">@dimen/no_space</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:elevation">@dimen/layout_margin_mid</item>
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">-3</item>
        <item name="android:shadowDy">-2</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:translationZ">@dimen/layout_margin_smallest</item>
    </style>

    <style name='TextViewOne' parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">@dimen/layout_margin_mid</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
