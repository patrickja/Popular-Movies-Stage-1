<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_movie_display"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_error_message_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin_mid"
        android:background="@color/errorMessageOne"
        android:padding="@dimen/padding_mid"
        android:text="@string/error_message"
        android:textColor="@android:color/white"
        android:textSize="@dimen/errorText"
        android:textStyle="bold"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/pb_loading_indicator"
        android:layout_width="@dimen/button_dimens"
        android:layout_height="@dimen/button_dimens"
        android:layout_gravity="center"
        android:visibility="invisible" />

</RelativeLayout>